{
  "name": "@deca-ui/react",
  "version": "1.5.1",
  "description": "DecaUI is production-ready themable component library built with StitchesJS.",
  "main": "build/main/index.js",
  "types": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/deca-org/deca-ui",
  "homepage": "deca-ui.com",
  "author": "herilsaha",
  "license": "MIT",
  "keywords": [
    "react",
    "javascript",
    "components",
    "design-systems",
    "typescript",
    "a11y",
    "react-components",
    "server-side-rendering",
    "component-library",
    "stitches"
  ],
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && run-p build:*",
    "build:main": "tsc -p config/tsconfig.build.json && tsc-alias -p config/tsconfig.build.json",
    "build:module": "tsc -p config/tsconfig.module.build.json && tsc-alias -p config/tsconfig.module.build.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "jest --coverage",
    "test:cypress": "cypress run --component",
    "cy:open": "cypress open --component",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest --watchAll",
    "cov": "run-s build test:unit && open-cli coverage/index.html",
    "cov:send": "run-s test:unit && codecov",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude \"**/*+(spec|test|stories).+(ts|tsx)\" --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && npm i",
    "prepare-release": "run-s reset-hard test doc:html version doc:publish",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook",
    "spellcheck": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "commit": "git-cz",
    "bump": "standard-version",
    "release": "git push --follow-tags origin main",
    "extract-changelog": "extract-changelog-release"
  },
  "engines": {
    "node": ">=10"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.stories.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/",
      "<rootDir>/src/lib/Utils/test.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage/jest",
    "testEnvironment": "jest-environment-jsdom",
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "text-summary",
      "html",
      "cobertura"
    ],
    "moduleNameMapper": {
      "^@lib/(.*)": "<rootDir>/src/lib/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": []
  },
  "dependencies": {
    "@floating-ui/react-dom": "^1.0.0",
    "@floating-ui/react-dom-interactions": "^0.9.1",
    "@react-aria/ssr": "^3.3.0",
    "@react-spring/web": "^9.5.2",
    "@stitches/react": "^1.3.1-1",
    "@types/uuid": "^8.3.4",
    "clsx": "^1.2.1",
    "deepmerge": "^4.2.2",
    "polished": "^4.2.2",
    "uuid": "^8.3.2"
  },
  "yalcSig": "ddcd15b3c216a4183e03549758ddcf4f"
}
